<div class="row well">
  <div class="col-lg-2">
    <ul class='list-group'>
      {{#each model as |user|}}
      <li class="list-group-item">
        <div class="user--login">
          {{#link-to 'users' user.login}}
          <img class="user--image" alt="{{user.login}}" src="{{user.avatar_url}}" width=100 height=100/>
          {{/link-to}}
          <div>
            <a class="user--github" href="https://github.com/{{user.login}}" target="blank">
            {{user.login}}
            </a>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>

  <div class="col-lg-10">
    {{outlet}}
  </div>

</div>
